declare -A MSG

# Sprachinitialisierung â€“ fragt interaktiv ab oder wÃ¤hlt Fallback.
load_translations() {
    if ! command -v whiptail &>/dev/null; then
        echo "WARNUNG: 'whiptail' fehlt â€“ Standard: Englisch" >&2
        set_default_english
        return
    fi

    if [[ ! -t 1 ]]; then
        echo "WARNUNG: Kein Terminal erkannt â€“ Standard: Englisch" >&2
        set_default_english
        return
    fi

    local lang status
    lang=$(whiptail --menu "Sprache wÃ¤hlen / Choose language:" 12 40 2 \
        "de" "Deutsch" \
        "en" "English" 3>&1 1>&2 2>&3)
    status=$?

    if [[ $status -ne 0 || -z "$lang" ]]; then
        whiptail --title "Abbruch / Cancelled" \
            --msgbox "Keine Auswahl â€“ Standard: Englisch." 8 60 || echo "Fallback: Englisch aktiviert."
        set_default_english
        return
    fi

    export LANGCODE="$lang"

    if [[ "$lang" == "de" ]]; then
        set_default_german
    else
        set_default_english
    fi
}

